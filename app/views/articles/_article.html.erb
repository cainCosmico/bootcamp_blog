<div class="mt-6">
    <div class="max-w-4xl px-10 py-6 mx-auto bg-white rounded-lg shadow-md">
        <div class="flex items-center justify-between">
          <%# <span class="font-light text-gray-600">Jun 1, 2020</span> %>
          <span class="font-light text-gray-600"> <%= article.updated_at.strftime("%b %d, %Y")  %> </span>
        </div>
        <div class="mt-2"><a href="#" class="text-2xl font-bold hover:underline"> <%= article.title %> </a>
            <p class="mt-2 text-gray-600"> <%= article.body.to_s[0, 250] %>... </p>
        </div>
        <div class="flex items-center justify-between mt-4">

          <%# <a href="#" class="text-blue-500 hover:underline">Read more</a> %>
          <%= link_to "Read more", article, class: "text-blue-500 hover:underline" %>
        </div>
    </div>
</div>




