<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="flex items-center justify-center">
    <div class="container max-w-screen-lg mx-auto">

        <div class="bg-white dark:bg-gray-600 rounded shadow-lg p-4 px-4 md:p-8 mb-6">
          <div class="grid gap-4 gap-y-2 text-sm grid-cols-1">

            <div class="lg:col-span-2">
              <div class="grid gap-4 gap-y-2 text-sm grid-cols-1 md:grid-cols-5">
                <div class="md:col-span-5">
                  <label for="full_name" class="dark:text-gray-100">Commenter</label>
                  <%= form.text_field :commenter, class: "h-10 border mt-1 rounded px-4 w-full bg-gray-50" %>
                </div>

                <div class="md:col-span-5">
                  <label for="email" class="dark:text-gray-100">Body</label>
                  <%= form.text_area :body, size: "70x5",class: "border mt-1 rounded px-4 w-full bg-gray-50" %>
                </div>

                <div class="md:col-span-2">
                  <label for="country" class="dark:text-gray-100">Status</label>
                  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
                </div>

                <div class="md:col-span-5 text-right">
                  <div class="inline-flex items-end">
                    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>                  
                  </div>
                </div>

              </div>
            </div>

          </div>
        </div>
      
    </div>
  </div>
<% end %>




