<div class="flex justify-between w-full">
  
  <div class="w-full p-4 text-center">
    <div class="text-left pl-4 pt-3">
      <span class="text-gray-700 dark:text-gray-100 text-2xl mr-2"><%= @user.email %></span>
      <span class="text-base font-semibold text-gray-700 mr-2">
        <button
          class="bg-transparent hover:bg-blue-500 text-gray-700 font-semibold hover:text-white py-2 px-4 border border-gray-600 hover:border-transparent rounded">
          Follow
        </button>
      </span>
      
    </div>

    <div class="text-left pl-4 pt-3">
      <span class="dark:text-gray-100 text-base font-semibold text-gray-700 mr-2">
        <b><%= @user.articles.length %></b> posts
      </span>
      <span class="dark:text-gray-100 text-base font-semibold text-gray-700 mr-2">
        <b><%= @user.followers.length %></b> followers
      </span>
      <span class="dark:text-gray-100 text-base font-semibold text-gray-700">
        <b><%= @user.followees.length %></b> following
      </span>
    </div>
  </div>

  <div class="w-full pb-4 px-4 text-center">
    <div class="relative md:w-3/4 text-center mt-8">
      <img class="h-40 w-40 object-cover rounded-full"
            src="https://picsum.photos/800"
            alt />
    </div>
  </div>

</div>

<hr class="m-4">

<% @user.articles.each do |article| %>
  <% unless article.archived? %>    
    <%= render article %>
  <% end %>
<% end %>

